#include <stdio.h>
// exercicio 4
int main()
{
  float cateto1; 
  float cateto2; 
  float hipotenusa;

  printf("Digete o comprimento do primeiro cateto: ");
  scanf("%f", &cateto1);
  printf("Digete o comprimento do segundo cateto: ");
  scanf("%f", &cateto2);

  hipotenusa = sqrt(cateto1 * cateto1 + cateto2 * cateto2);
  
  printf("Um triângulo retângulo com lados %.2f e %.2f tem uma hipotenusa igual a %.2f.\n", cateto1, cateto2, hipotenusa);

  return 0;
}